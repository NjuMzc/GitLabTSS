<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPureWhite">
    <View
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/work_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="问题名称"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/work_score_score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="0分-59分:"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/work_score_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="60分-69分:"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/work_score_score3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="70分-79分:"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/work_score_score4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="80分-89分:"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/work_score_score5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="90分-100分:"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
</LinearLayout>