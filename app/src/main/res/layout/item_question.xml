<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPureWhite"
    android:layout_height="wrap_content">
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:text="问题名称"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/item_question_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述:"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_below="@+id/item_question_title"
            android:layout_alignLeft="@+id/item_question_title"
            android:layout_alignStart="@+id/item_question_title" />
        <TextView
            android:id="@+id/item_question_description_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描述"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_below="@+id/item_question_description_text"
            android:layout_alignLeft="@+id/item_question_title"
            android:layout_alignStart="@+id/item_question_title" />
        <TextView
            android:id="@+id/item_question_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="难度:3"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_below="@+id/item_question_description_todo"
            android:layout_alignLeft="@+id/item_question_title"
            android:layout_alignStart="@+id/item_question_title" />
        <TextView
            android:id="@+id/item_question_gitUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gitUrl:"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_below="@+id/item_question_difficulty"
            android:layout_alignLeft="@+id/item_question_title"
            android:layout_alignStart="@+id/item_question_title" />
        <TextView
            android:id="@+id/item_question_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建者:"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_below="@+id/item_question_gitUrl"
            android:layout_alignLeft="@+id/item_question_title"
            android:layout_alignStart="@+id/item_question_title" />
    </RelativeLayout>

</LinearLayout>